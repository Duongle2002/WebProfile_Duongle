@model MyWebProfile.Models.ContentSettings

@{
    ViewData["Title"] = "Thêm cài đặt nội dung";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Thêm cài đặt nội dung</h2>
        <p>Tạo cài đặt nội dung mới cho website</p>
    </div>
    <a href="@Url.Action("ContentSettings", "Admin")" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="CreateContentSetting" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Key" class="form-label">Khóa *</label>
                <input asp-for="Key" class="form-control" placeholder="Ví dụ: HeroName, NavBrand" />
                <span asp-validation-for="Key" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Value" class="form-label">Giá trị *</label>
                <textarea asp-for="Value" class="form-control" rows="3" placeholder="Nhập giá trị cho khóa"></textarea>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Category" class="form-label">Danh mục</label>
                <select asp-for="Category" class="form-control">
                    <option value="Hero">Hero</option>
                    <option value="Navigation">Navigation</option>
                    <option value="About">About</option>
                    <option value="Contact">Contact</option>
                    <option value="Footer">Footer</option>
                    <option value="General">General</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="form-label">Mô tả</label>
                <input asp-for="Description" class="form-control" placeholder="Mô tả ngắn về cài đặt này" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu cài đặt
                </button>
                <a href="@Url.Action("ContentSettings", "Admin")" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 