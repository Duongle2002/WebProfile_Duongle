@model List<MyWebProfile.Models.Experience>
@{
    ViewData["Title"] = "Kinh nghiệm đã xóa";
    Layout = "_Layout";
}

<div class="admin-dashboard">
    <div class="row">
        <!-- Sidebar giữ nguyên như Experiences.cshtml -->
        <div class="col-md-2">
            <div class="admin-sidebar">
                <div class="admin-header">
                    <h3><i class="fas fa-cog"></i> Admin Panel</h3>
                </div>
                <nav class="admin-nav">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Admin")">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Projects", "Admin")">
                                <i class="fas fa-project-diagram"></i> Quản lý Dự án
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Skills", "Admin")">
                                <i class="fas fa-code"></i> Quản lý Kỹ năng
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Experiences", "Admin")">
                                <i class="fas fa-briefcase"></i> Quản lý Kinh nghiệm
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ThemeSettings", "Admin")">
                                <i class="fas fa-palette"></i> Cài đặt Giao diện
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- Main Content -->
        <div class="col-md-10">
            <div class="admin-content">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2>Kinh nghiệm đã xóa</h2>
                        <p>Tổng cộng: @Model.Count kinh nghiệm đã xóa</p>
                    </div>
                    <a href="@Url.Action("Experiences", "Admin")" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
                <div class="experiences-grid">
                    @foreach (var exp in Model)
                    {
                        <div class="experience-card">
                            <div class="experience-content">
                                <h4>@exp.Title</h4>
                                <p class="experience-description">@exp.Description</p>
                                <div class="experience-meta">
                                    <span class="company">@exp.Company</span>
                                    <span class="period">@exp.Period</span>
                                </div>
                                <div class="experience-actions">
                                    <form method="post" action="@Url.Action("RestoreExperience", "Admin", new { id = exp.Id })" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fas fa-undo"></i> Khôi phục
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteExperienceForeverModal" data-exp-id="@exp.Id" data-exp-title="@exp.Title">
                                        <i class="fas fa-trash"></i> Xóa vĩnh viễn
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @if (!Model.Any())
                {
                    <div class="empty-state">
                        <i class="fas fa-briefcase"></i>
                        <h3>Không có kinh nghiệm nào đã xóa</h3>
                        <a href="@Url.Action("Experiences", "Admin")" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa vĩnh viễn -->
<div class="modal fade" id="deleteExperienceForeverModal" tabindex="-1" aria-labelledby="deleteExperienceForeverModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteExperienceForeverModalLabel">Xác nhận xóa vĩnh viễn</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn <strong>xóa vĩnh viễn</strong> kinh nghiệm <strong id="modalExperienceTitleForever"></strong> không? Hành động này không thể hoàn tác!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <form id="deleteExperienceForeverForm" method="post">
            <button type="submit" class="btn btn-danger">Xóa vĩnh viễn</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
var deleteExperienceForeverModal = document.getElementById('deleteExperienceForeverModal');
deleteExperienceForeverModal.addEventListener('show.bs.modal', function (event) {
  var button = event.relatedTarget;
  var expId = button.getAttribute('data-exp-id');
  var expTitle = button.getAttribute('data-exp-title');
  var modalTitle = deleteExperienceForeverModal.querySelector('#modalExperienceTitleForever');
  var deleteForm = deleteExperienceForeverModal.querySelector('#deleteExperienceForeverForm');
  modalTitle.textContent = expTitle;
  deleteForm.action = '/Admin/DeleteExperiencePermanently/' + expId;
});
</script> 