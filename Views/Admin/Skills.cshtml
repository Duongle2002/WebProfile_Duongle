@model List<MyWebProfile.Models.Skill>
@{
    ViewData["Title"] = "Quản lý Kỹ năng";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Quản lý Kỹ năng</h2>
        <p>Tổng cộng: @Model.Count kỹ năng</p>
    </div>
    <div>
        <a href="@Url.Action("SkillsDeleted", "Admin")" class="btn btn-outline-secondary me-2">
            <i class="fas fa-trash-restore"></i> Đã xóa
        </a>
        <a href="@Url.Action("CreateSkill", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm kỹ năng mới
        </a>
    </div>
</div>
                    <div class="skills-grid">
    @foreach (var skill in Model)
    {
        <div class="skill-card">
            <div class="skill-content">
                <h4>@skill.Name</h4>
                <p class="skill-description">@skill.Description</p>
                <div class="skill-meta">
                    <span class="category">@skill.Category</span>
                    <span class="proficiency">@skill.Proficiency%</span>
                </div>
                <div class="skill-actions">
                    <a href="@Url.Action("EditSkill", "Admin", new { id = skill.Id })" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteSkillModal" data-skill-id="@skill.Id" data-skill-name="@skill.Name">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <i class="fas fa-code"></i>
        <h3>Chưa có kỹ năng nào</h3>
        <p>Bắt đầu bằng cách thêm kỹ năng đầu tiên</p>
        <a href="@Url.Action("CreateSkill", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm kỹ năng mới
        </a>
    </div>
}

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteSkillModal" tabindex="-1" aria-labelledby="deleteSkillModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteSkillModalLabel">Xác nhận xóa kỹ năng</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn xóa kỹ năng <strong id="modalSkillName"></strong> không?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <form id="deleteSkillForm" method="post">
            <button type="submit" class="btn btn-danger">Xóa</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
var deleteSkillModal = document.getElementById('deleteSkillModal');
deleteSkillModal.addEventListener('show.bs.modal', function (event) {
  var button = event.relatedTarget;
  var skillId = button.getAttribute('data-skill-id');
  var skillName = button.getAttribute('data-skill-name');
  var modalTitle = deleteSkillModal.querySelector('#modalSkillName');
  var deleteForm = deleteSkillModal.querySelector('#deleteSkillForm');
  modalTitle.textContent = skillName;
  deleteForm.action = '/Admin/DeleteSkill/' + skillId;
});
</script>

