@model List<MyWebProfile.Models.Experience>
@{
    ViewData["Title"] = "Quản lý Kinh nghiệm";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Quản lý Kinh nghiệm</h2>
        <p>Tổng cộng: @Model.Count kinh nghiệm</p>
    </div>
    <div>
        <a href="@Url.Action("ExperiencesDeleted", "Admin")" class="btn btn-outline-secondary me-2">
            <i class="fas fa-trash-restore"></i> Đã xóa
        </a>
        <a href="@Url.Action("CreateExperience", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm kinh nghiệm mới
        </a>
    </div>
</div>

<div class="experiences-grid">
    @foreach (var exp in Model)
    {
        <div class="experience-card">
            <div class="experience-content">
                <h4>@exp.Title</h4>
                <p class="experience-description">@exp.Description</p>
                <div class="experience-meta">
                    <span class="company">@exp.Company</span>
                    <span class="period">@exp.Period</span>
                </div>
                <div class="experience-actions">
                    <a href="@Url.Action("EditExperience", "Admin", new { id = exp.Id })" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteExperienceModal" data-exp-id="@exp.Id" data-exp-title="@exp.Title">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <i class="fas fa-briefcase"></i>
        <h3>Chưa có kinh nghiệm nào</h3>
        <p>Bắt đầu bằng cách thêm kinh nghiệm đầu tiên</p>
        <a href="@Url.Action("CreateExperience", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm kinh nghiệm mới
        </a>
    </div>
}

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteExperienceModal" tabindex="-1" aria-labelledby="deleteExperienceModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteExperienceModalLabel">Xác nhận xóa kinh nghiệm</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn xóa kinh nghiệm <strong id="modalExperienceTitle"></strong> không?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <form id="deleteExperienceForm" method="post">
            <button type="submit" class="btn btn-danger">Xóa</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
var deleteExperienceModal = document.getElementById('deleteExperienceModal');
deleteExperienceModal.addEventListener('show.bs.modal', function (event) {
  var button = event.relatedTarget;
  var expId = button.getAttribute('data-exp-id');
  var expTitle = button.getAttribute('data-exp-title');
  var modalTitle = deleteExperienceModal.querySelector('#modalExperienceTitle');
  var deleteForm = deleteExperienceModal.querySelector('#deleteExperienceForm');
  modalTitle.textContent = expTitle;
  deleteForm.action = '/Admin/DeleteExperience/' + expId;
});
</script> 