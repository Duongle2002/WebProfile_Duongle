@model List<MyWebProfile.Models.Project>
@{
    ViewData["Title"] = "Dự án đã xóa";
    Layout = "_AdminLayout";
}
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2>Dự án đã xóa</h2>
                        <p>Tổng cộng: @Model.Count dự án đã xóa</p>
                    </div>
                    <a href="@Url.Action("Projects", "Admin")" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
                <div class="projects-grid">
                    @foreach (var project in Model)
                    {
                        <div class="project-card">
                            <div class="project-image">
                                <img src="@project.ImageUrl" alt="@project.Title" onerror="this.src='https://via.placeholder.com/300x200?text=No+Image'">
                            </div>
                            <div class="project-content">
                                <h4>@project.Title</h4>
                                <p class="project-description">@project.Description</p>
                                <div class="project-tags">
                                    @foreach (var tag in project.Tags.Split(','))
                                    {
                                        <span class="tag">@tag.Trim()</span>
                                    }
                                </div>
                                <div class="project-meta">
                                    <span class="price">$@project.Price.ToString("N0")</span>
                                    <span class="rating">
                                        <i class="fas fa-star"></i> @project.Rating
                                    </span>
                                </div>
                                <div class="project-actions">
                                    <form method="post" action="@Url.Action("RestoreProject", "Admin", new { id = project.Id })" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fas fa-undo"></i> Khôi phục
                                        </button>
                                    </form>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteForeverModal" data-project-id="@project.Id" data-project-title="@project.Title">
                                        <i class="fas fa-trash"></i> Xóa vĩnh viễn
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @if (!Model.Any())
                {
                    <div class="empty-state">
                        <i class="fas fa-trash"></i>
                        <h3>Không có dự án nào đã xóa</h3>
                        <a href="@Url.Action("Projects", "Admin")" class="btn btn-primary">
                            <i class="fas fa-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa vĩnh viễn -->
<div class="modal fade" id="deleteForeverModal" tabindex="-1" aria-labelledby="deleteForeverModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteForeverModalLabel">Xác nhận xóa vĩnh viễn</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn <strong>xóa vĩnh viễn</strong> dự án <strong id="modalProjectTitleForever"></strong> không? Hành động này không thể hoàn tác!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <form id="deleteForeverForm" method="post">
            <button type="submit" class="btn btn-danger">Xóa vĩnh viễn</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
var deleteForeverModal = document.getElementById('deleteForeverModal');
deleteForeverModal.addEventListener('show.bs.modal', function (event) {
  var button = event.relatedTarget;
  var projectId = button.getAttribute('data-project-id');
  var projectTitle = button.getAttribute('data-project-title');
  var modalTitle = deleteForeverModal.querySelector('#modalProjectTitleForever');
  var deleteForm = deleteForeverModal.querySelector('#deleteForeverForm');
  modalTitle.textContent = projectTitle;
  deleteForm.action = '/Admin/DeleteProjectPermanently/' + projectId;
});
</script> 