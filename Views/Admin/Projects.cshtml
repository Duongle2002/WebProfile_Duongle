@model List<MyWebProfile.Models.Project>
@{
    ViewData["Title"] = "Quản lý Dự án";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Quản lý Dự án</h2>
        <p>Tổng cộng: @Model.Count dự án</p>
    </div>
    <div>
        <a href="@Url.Action("ProjectsDeleted", "Admin")" class="btn btn-outline-secondary me-2">
            <i class="fas fa-trash-restore"></i> Đã xóa
        </a>
        <a href="@Url.Action("CreateProject", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm dự án mới
        </a>
    </div>
</div>

<div class="projects-grid">
    @foreach (var project in Model)
    {
        <div class="project-card">
            <div class="project-image">
                <img src="@(project.ImageUrl ?? "https://via.placeholder.com/300x200?text=No+Image")" alt="@project.Title" onerror="this.src='https://via.placeholder.com/300x200?text=No+Image'">
            </div>
            <div class="project-content">
                <h4>@project.Title</h4>
                <p class="project-description">@project.Description</p>
                <div class="project-tags">
                    @if (!string.IsNullOrEmpty(project.Tags))
                    {
                        @foreach (var tag in project.Tags.Split(','))
                        {
                            <span class="tag">@tag.Trim()</span>
                        }
                    }
                </div>
                <div class="project-meta">
                    <span class="price">$@project.Price.ToString("N0")</span>
                    <span class="rating">
                        <i class="fas fa-star"></i> @project.Rating
                    </span>
                </div>
                <div class="project-actions">
                    <a href="@Url.Action("EditProject", "Admin", new { id = project.Id })" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-project-id="@project.Id" data-project-title="@project.Title">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <i class="fas fa-project-diagram"></i>
        <h3>Chưa có dự án nào</h3>
        <p>Bắt đầu bằng cách thêm dự án đầu tiên</p>
        <a href="@Url.Action("CreateProject", "Admin")" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm dự án mới
        </a>
    </div>
}

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa dự án</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Bạn có chắc chắn muốn xóa dự án <strong id="modalProjectTitle"></strong> không?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <form id="deleteForm" method="post">
            <button type="submit" class="btn btn-danger">Xóa</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget;
        var projectId = button.getAttribute('data-project-id');
        var projectTitle = button.getAttribute('data-project-title');
        var modalTitle = deleteModal.querySelector('#modalProjectTitle');
        var deleteForm = deleteModal.querySelector('#deleteForm');
        modalTitle.textContent = projectTitle;
        deleteForm.action = '/Admin/DeleteProject/' + projectId;
    });
});
</script> 