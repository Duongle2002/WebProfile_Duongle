@model MyWebProfile.Models.ThemeSettings
@{
    ViewData["Title"] = "Cài đặt Giao diện";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-palette"></i> Cài đặt Giao diện</h2>
        <p>Tùy chỉnh màu sắc và hiệu ứng cho website</p>
    </div>
    <div>
        <a href="@Url.Action("PreviewMainPage", "Admin")" class="btn btn-primary" target="_blank">
            <i class="fas fa-eye"></i> Xem trước Website
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <!-- Tabs Navigation -->
        <ul class="nav nav-tabs mb-4" id="themeTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="colors-tab" data-bs-toggle="tab" data-bs-target="#colors" type="button" role="tab">
                    <i class="fas fa-palette"></i> Màu sắc
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="typography-tab" data-bs-toggle="tab" data-bs-target="#typography" type="button" role="tab">
                    <i class="fas fa-font"></i> Typography
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="effects-tab" data-bs-toggle="tab" data-bs-target="#effects" type="button" role="tab">
                    <i class="fas fa-magic"></i> Hiệu ứng
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="themeTabContent">
            <!-- Tab 1: Colors -->
            <div class="tab-pane fade show active" id="colors" role="tabpanel">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Màu chính (Primary)</label>
                                <input type="color" id="PrimaryColor" class="form-control form-control-color" value="@Model.PrimaryColor">
                                <input type="text" class="form-control mt-1" value="@Model.PrimaryColor" placeholder="#007bff">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Màu phụ (Secondary)</label>
                                <input type="color" id="SecondaryColor" class="form-control form-control-color" value="@Model.SecondaryColor">
                                <input type="text" class="form-control mt-1" value="@Model.SecondaryColor" placeholder="#6c757d">
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Màu nền (Background)</label>
                                <input type="color" id="BackgroundColor" class="form-control form-control-color" value="@Model.BackgroundColor">
                                <input type="text" class="form-control mt-1" value="@Model.BackgroundColor" placeholder="#ffffff">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Màu chữ (Text)</label>
                                <input type="color" id="TextColor" class="form-control form-control-color" value="@Model.TextColor">
                                <input type="text" class="form-control mt-1" value="@Model.TextColor" placeholder="#333333">
                            </div>
                        </div>

                        <!-- Gradient Settings -->
                        <hr>
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="UseGradientBackground" @(Model.UseGradientBackground ? "checked" : "")>
                            <label class="form-check-label" for="UseGradientBackground">
                                <i class="fas fa-gradient"></i> Sử dụng gradient background
                            </label>
                        </div>
                        
                        <div id="gradientSettings" class="@(Model.UseGradientBackground ? "" : "d-none")">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Hướng gradient</label>
                                    <select id="GradientDirection" class="form-control">
                                        <option value="to right">Trái → Phải</option>
                                        <option value="to bottom">Trên → Dưới</option>
                                        <option value="45deg">45° (Chéo)</option>
                                        <option value="-45deg">-45° (Chéo ngược)</option>
                                    </select>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Gradient Preview</label>
                                    <div id="gradientPreview" class="gradient-preview"></div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Màu bắt đầu</label>
                                    <input type="color" id="GradientStartColor" class="form-control form-control-color" value="@Model.GradientStartColor">
                                    <input type="text" class="form-control mt-1" value="@Model.GradientStartColor" placeholder="#ff6b6b">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Màu giữa (tùy chọn)</label>
                                    <input type="color" id="GradientMiddleColor" class="form-control form-control-color" value="@Model.GradientMiddleColor">
                                    <input type="text" class="form-control mt-1" value="@Model.GradientMiddleColor" placeholder="#4ecdc4">
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Màu kết thúc</label>
                                    <input type="color" id="GradientEndColor" class="form-control form-control-color" value="@Model.GradientEndColor">
                                    <input type="text" class="form-control mt-1" value="@Model.GradientEndColor" placeholder="#45b7d1">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
