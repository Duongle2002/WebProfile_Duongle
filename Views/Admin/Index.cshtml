@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-project-diagram"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@ViewBag.ProjectCount</h3>
                        <p>Dự án</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-code"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@ViewBag.SkillCount</h3>
                        <p>Kỹ năng</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@ViewBag.ExperienceCount</h3>
                        <p>Kinh nghiệm</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="quick-actions">
                    <h4>Thao tác nhanh</h4>
                    <div class="action-buttons">
                        <a href="@Url.Action("CreateProject", "Admin")" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Thêm dự án mới
                        </a>
                        <a href="@Url.Action("CreateSkill", "Admin")" class="btn btn-success">
                            <i class="fas fa-plus"></i> Thêm kỹ năng mới
                        </a>
                        <a href="@Url.Action("CreateExperience", "Admin")" class="btn btn-info">
                            <i class="fas fa-plus"></i> Thêm kinh nghiệm mới
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="preview-section">
                    <h4>Xem trước</h4>
                    <p>Xem trước website với các thay đổi mới nhất</p>
                    <a href="@Url.Action("Preview", "Admin")" target="_blank" class="btn btn-warning">
                        <i class="fas fa-eye"></i> Xem trước Website
                    </a>
                </div>
            </div>
        </div>
        

    </div>
    
    <div class="col-md-4">
        <div class="recent-activity">
            <h4>Hoạt động gần đây</h4>
            <div class="activity-list">
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-plus text-success"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Thêm dự án mới</div>
                        <div class="activity-time">2 giờ trước</div>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-edit text-primary"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Cập nhật kỹ năng</div>
                        <div class="activity-time">5 giờ trước</div>
                    </div>
                </div>
                <div class="activity-item">
                    <div class="activity-icon">
                        <i class="fas fa-cog text-warning"></i>
                    </div>
                    <div class="activity-content">
                        <div class="activity-title">Cài đặt giao diện</div>
                        <div class="activity-time">1 ngày trước</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Add any additional JavaScript for dashboard functionality here
document.addEventListener('DOMContentLoaded', function() {
    // Initialize any dashboard-specific functionality
    console.log('Admin Dashboard loaded successfully');
});
</script> 