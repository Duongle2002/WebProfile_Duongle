<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <style>
        .admin-sidebar {
            min-height: 100vh;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            z-index: 1000;
            transition: all 0.3s ease;
        }
        
        .admin-sidebar.collapsed {
            width: 70px;
        }
        
        .admin-content {
            margin-left: 280px;
            transition: all 0.3s ease;
            min-height: 100vh;
            background-color: #f8f9fa;
        }
        
        .admin-content.expanded {
            margin-left: 70px;
        }
        
        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            text-align: center;
        }
        
        .sidebar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            text-decoration: none;
        }
        
        .sidebar-nav {
            padding: 1rem 0;
        }
        
        .nav-item {
            margin: 0.25rem 1rem;
        }
        
        .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 0.75rem 1rem;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        
        .nav-link:hover {
            color: white;
            background-color: rgba(255,255,255,0.1);
            transform: translateX(5px);
        }
        
        .nav-link.active {
            background-color: rgba(255,255,255,0.2);
            color: white;
        }
        
        .nav-link i {
            width: 20px;
            text-align: center;
        }
        
        .sidebar-footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            padding: 1rem;
            border-top: 1px solid rgba(255,255,255,0.1);
            text-align: center;
        }
        
        .admin-header {
            background: white;
            border-bottom: 1px solid #dee2e6;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .admin-main {
            padding: 2rem;
        }
        
        .admin-footer {
            background: white;
            border-top: 1px solid #dee2e6;
            padding: 1rem 2rem;
            text-align: center;
            color: #6c757d;
        }
        
        .toggle-sidebar {
            background: none;
            border: none;
            color: #6c757d;
            font-size: 1.25rem;
            cursor: pointer;
        }
        
        .user-info {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .user-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
        }
        
        @@media (max-width: 768px) {
            .admin-sidebar {
                transform: translateX(-100%);
            }
            
            .admin-sidebar.show {
                transform: translateX(0);
            }
            
            .admin-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="admin-sidebar" id="adminSidebar">
        <div class="sidebar-header">
            <a href="@Url.Action("Index", "Admin")" class="sidebar-brand">
                <i class="fas fa-cogs"></i>
                <span class="sidebar-text">Admin Panel</span>
            </a>
        </div>
        
        <nav class="sidebar-nav">
            <div class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                   href="@Url.Action("Index", "Admin")">
                    <i class="fas fa-tachometer-alt"></i>
                    <span class="sidebar-text">Dashboard</span>
                </a>
            </div>
            
            <div class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Projects" ? "active" : "")" 
                   href="@Url.Action("Projects", "Admin")">
                    <i class="fas fa-project-diagram"></i>
                    <span class="sidebar-text">Quản lý Dự án</span>
                </a>
            </div>
            
            <div class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Skills" ? "active" : "")" 
                   href="@Url.Action("Skills", "Admin")">
                    <i class="fas fa-code"></i>
                    <span class="sidebar-text">Quản lý Kỹ năng</span>
                </a>
            </div>
            
            <div class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Experiences" ? "active" : "")" 
                   href="@Url.Action("Experiences", "Admin")">
                    <i class="fas fa-briefcase"></i>
                    <span class="sidebar-text">Quản lý Kinh nghiệm</span>
                </a>
            </div>
            
            <div class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Users" ? "active" : "")" 
                   href="@Url.Action("Users", "Admin")">
                    <i class="fas fa-users"></i>
                    <span class="sidebar-text">Quản lý Người dùng</span>
                </a>
            </div>
            
                            <div class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ContentSettings" ? "active" : "")" 
                       href="@Url.Action("ContentSettings", "Admin")">
                        <i class="fas fa-sort"></i>
                        <span class="sidebar-text">Quản lý thứ tự hiển thị</span>
                    </a>
                </div>
                            <div class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Statistics" ? "active" : "")" 
                   href="@Url.Action("Statistics", "Admin")">
                    <i class="fas fa-chart-bar"></i>
                    <span class="sidebar-text">Quản lý Thống kê</span>
                </a>
            </div>
            
            <div class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ImageUpload" ? "active" : "")" 
                   href="@Url.Action("ImageUpload", "Admin")">
                    <i class="fas fa-images"></i>
                    <span class="sidebar-text">Quản lý Hình ảnh</span>
                </a>
            </div>
            
            <div class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "MainPageContent" ? "active" : "")" 
                   href="@Url.Action("MainPageContent", "Admin")">
                    <i class="fas fa-home"></i>
                    <span class="sidebar-text">Nội dung trang chính</span>
                </a>
            </div>
            
            <div class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ThemeSettings" ? "active" : "")" 
                   href="@Url.Action("ThemeSettings", "Admin")">
                    <i class="fas fa-palette"></i>
                    <span class="sidebar-text">Cài đặt Giao diện</span>
                </a>
            </div>
            
            <div class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "EmailNotification" ? "active" : "")" 
                   href="@Url.Action("EmailNotification", "Admin")">
                    <i class="fas fa-envelope"></i>
                    <span class="sidebar-text">Email Notification</span>
                </a>
            </div>
            
            <div class="nav-item">
                <a class="nav-link" href="@Url.Action("Preview", "Admin")" target="_blank">
                    <i class="fas fa-eye"></i>
                    <span class="sidebar-text">Xem trước Website</span>
                </a>
            </div>
        </nav>
        
        <div class="sidebar-footer">
            <a href="@Url.Action("Logout", "Admin")" class="btn btn-outline-light btn-sm w-100">
                <i class="fas fa-sign-out-alt"></i>
                <span class="sidebar-text">Đăng xuất</span>
            </a>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="admin-content" id="adminContent">
        <!-- Header -->
        <header class="admin-header">
            <div class="d-flex align-items-center">
                <button class="toggle-sidebar me-3" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            
            <div class="user-info">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <div class="fw-bold">Admin</div>
                    <small class="text-muted">Administrator</small>
                </div>
            </div>
        </header>
        
        <!-- Main Content Area -->
        <main class="admin-main">
            @RenderBody()
        </main>
        
        <!-- Footer -->
        <footer class="admin-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-0">&copy; 2025 - MyWebProfile Admin Panel</p>
                    </div>
                    <div class="col-md-6 text-end">
                        <small class="text-muted">
                            <i class="fas fa-clock"></i> 
                            <span id="currentTime"></span>
                        </small>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme-loader.js" asp-append-version="true"></script>
    
    <script>
        // Toggle sidebar
        function toggleSidebar() {
            const sidebar = document.getElementById('adminSidebar');
            const content = document.getElementById('adminContent');
            
            sidebar.classList.toggle('collapsed');
            content.classList.toggle('expanded');
        }
        
        // Update current time
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleString('vi-VN');
            document.getElementById('currentTime').textContent = timeString;
        }
        
        // Update time every second
        setInterval(updateTime, 1000);
        updateTime();
        
        // Mobile sidebar toggle
        if (window.innerWidth <= 768) {
            document.getElementById('adminSidebar').classList.add('collapsed');
            document.getElementById('adminContent').classList.add('expanded');
        }
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 